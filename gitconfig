[apply]

[alias]
  ci = commit
  st = status
  co = checkout
  cob = checkout -b
  d = diff
  ps = push
  pl = pull
  poule = pull
  m = merge
  ms = merge --squash
  b = branch
  rb = rebase
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  db = branch -d
  ctags = !.git/hooks/ctags
  review = !.git/hooks/review
  delete-remote = "!sh -c 'git push origin :$0'"
