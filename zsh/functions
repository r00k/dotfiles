function dafuq_docker {
  sudo route -n add -net 192.168.59.0/24 -interface $(VBoxManage showvminfo boot2docker-vm --machinereadable | grep hostonlyadapter | cut -d '"' -f 2)
}
function hexrandom {
  size=${1-64}
  ruby -e "require 'securerandom'; puts SecureRandom.hex($size)"
}

function todo {
  vim ~/Dropbox/todos/$1.txt
}

function list-todo {
  for i in ~/Dropbox/todos/*; do echo $(basename $i | cut -f 1 -d '.') ":" $(wc -l < $i); done
}

function snippet {
  vim ~/Dropbox/snippets/$1
}

function snippets {
  for i in ~/Dropbox/snippets/*; do echo $(basename $i); done
}
cloud() {
  eval "$(ion-client shell)"
  cloud "$@"
}
