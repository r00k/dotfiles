# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias amend="git commit --amend"
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'
alias flushdns='dscacheutil -flushcache'
# alias git=hub
alias mou='/Applications/Mou.app/Contents/MacOS/Mou'
alias nifty1='sudo kextunload /System/Library/Extensions/AppleStorageDrivers.kext/Contents/PlugIns/AppleUSBCardReader.kext; sudo kextload /System/Library/Extensions/AppleStorageDrivers.kext/Contents/PlugIns/AppleUSBCardReader.kext'
alias s='cd /Users/ys/src'
alias track='git checkout -t'
alias v='vim'
# todos
alias to='todo'
alias lto='list-todo'

alias rspec="nocorrect rspec"
alias spring="nocorrect spring"
